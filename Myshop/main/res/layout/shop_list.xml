    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="좋아요>> "
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>

    <ImageView
